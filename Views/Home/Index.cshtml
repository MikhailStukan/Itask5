@model User

<div class="text-center">
    <h1 class="display-4">Welcome to messenger</h1>
    <p>Please, enter user name to proceed: </p>
    <div id="loginForm">
    <form asp-action="create" id="user" method="post">
        <div class="form-floating">
            <input asp-for="Name" autocomplete="off" class="form-control"aria-required="true" />
            <label asp-for="Name" class="form-label"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
    </form>
    </div>
</div>
